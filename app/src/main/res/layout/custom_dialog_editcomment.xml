<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:backgroundTint="#3325A4C7"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_width="200dp" android:layout_height="50dp"
            android:background="@drawable/border_edittext"
            android:id="@+id/edt_edit_comment"/>
    <Button
            android:id="@+id/btn_edit_comment"
            android:layout_width="wrap_content" android:layout_height="50dp"
            android:background="@drawable/border_button"
            android:text="Confirm"
            android:textColor="@color/white"/>
</LinearLayout>