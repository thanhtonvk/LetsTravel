<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/primary"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.NewsManagementActivity">
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_marginTop="-15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_place"/>
        <TextView
            android:layout_marginTop="-15dp"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Travel"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/border_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <AutoCompleteTextView
               android:paddingLeft="20dp"
                android:id="@+id/edt_newsmanager_search"
                android:layout_weight="2"
                android:background="@drawable/border_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_newsmanager_add"
                android:textColor="@color/white"
                android:background="@drawable/border_button"
                android:text="Add"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ListView
            android:id="@+id/lv_admin_newsmanager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>